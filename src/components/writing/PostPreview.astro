---
import type { HTMLTag, Polymorphic } from 'astro/types'
import type { CollectionEntry } from 'astro:content'

import FormattedDate from '../FormattedDate.astro'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<'post'>
	withDesc?: boolean
}

const { as: Tag = 'div', post, withDesc = false } = Astro.props
const postDate = post.data.updatedDate ?? post.data.publishDate

// Category styling - matches "Building in Public" aesthetic
// CONFIGURE CATEGORIES HERE: Add new categories with their colors and display labels
const categoryStyles: Record<string, { bg: string; text: string }> = {
	technical: { bg: 'bg-sky-50 dark:bg-sky-500/10', text: 'text-sky-700 dark:text-sky-400' },
	essay: { bg: 'bg-amber-50 dark:bg-amber-500/10', text: 'text-amber-700 dark:text-amber-400' },
}

const categoryLabels: Record<string, string> = {
	technical: 'Technical Post',
	essay: 'Essay',
}

const category = post.data.category || 'essay'
const style = categoryStyles[category] || categoryStyles.essay
const label = categoryLabels[category] || category
---

<li class='flex flex-col gap-2 sm:flex-row sm:gap-x-4 [&_q]:basis-full'>
	<div class='flex min-w-[120px] items-center gap-2 sm:block'>
		<FormattedDate date={postDate} />
		<span class={`inline-block px-2 py-0.5 text-xs font-medium italic sm:mt-1 sm:block ${style.bg} ${style.text}`}>
			{label}
		</span>
	</div>

	<Tag class='flex-1'>
		{post.data.draft && <span class='text-red-500'>(Draft) </span>}
		<a
			data-astro-prefetch
			href={`/writing/${post.slug}/`}
			class='transition-all hover:text-muted-foreground'
		>
			{post.data.title}
		</a>
		{
			withDesc && (
				<p class='line-clamp-3 block text-sm italic text-muted-foreground'>
					{post.data.description}
				</p>
			)
		}
	</Tag>
</li>
